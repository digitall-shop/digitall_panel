# Core database
POSTGRES_USER=vpnpanel
POSTGRES_PASSWORD=vpnpanelpassword
POSTGRES_DB=vpnpanel
DATABASE_URL=postgresql+asyncpg://vpnpanel:vpnpanelpassword@postgres:5432/vpnpanel

# Redis
REDIS_URL=redis://redis:6379/0

# App
APP_NAME=VPN Control Plane
API_V1_PREFIX=/v1
SECRET_KEY=change_me_super_secret
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_MINUTES=43200
JWT_ALG=HS256

# Superuser bootstrap
FIRST_SUPERUSER=admin
FIRST_SUPERUSER_PASSWORD=admin123

# Security
ADMIN_IP_ALLOWLIST=127.0.0.1/32,::1/128
INTERNAL_CA_CERT_PATH=/certs/ca/ca.pem
INTERNAL_CA_KEY_PATH=/certs/ca/ca-key.pem

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=
PROMETHEUS_MULTIPROC_DIR=/tmp/metrics
LOG_LEVEL=INFO

# Scheduler
SCHEDULER_INTERVAL_SECONDS=60
TRAFFIC_ROLLUP_INTERVAL_SECONDS=300
QUOTA_ENFORCE_INTERVAL_SECONDS=300
PARTITION_DAYS_AHEAD=7
RETENTION_RAW_DAYS=60
RETENTION_ROLLUP_MONTHS=18

# Node agent (for node stack)
CONTROL_PLANE_GRPC_ADDRESS=control-api:8001
NODE_ID=
NODE_NAME=
NODE_TAGS=default
SAMPLE_INTERVAL_SECONDS=60

